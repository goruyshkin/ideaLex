= form_for @notebook do |f|
  - if @notebook.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notebook.errors.count, "error")} prohibited this notebook from being saved:"
      %ul
        - @notebook.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :Название
    = f.text_field :name, class: "form-control", type: "string", placeholder: "Название"
  .field
    = f.label :Содержание
    = f.text_area :description, class: "form-control", type: "text", placeholder: "Содержание"
  .actions
    = f.submit 'Сохранить', class: "btn btn-light"
