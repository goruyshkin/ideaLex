= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :Название
    = f.text_field :name, class: "form-control", type: "string", placeholder: "Название", id: "inputGroupFile01"
  .field
    = f.label :Файл
    = f.file_field :book_file, class: "form-control", type: "file"
  .field
    = f.label :Автор
    = f.text_field :author, class: "form-control", type: "string", placeholder: "Автор"
  .actions
    = f.submit 'Сохранить', class: "btn btn-light"
