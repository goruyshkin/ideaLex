%h1 Список книг

%table.table.table-hover
  %thead
    %tr
      %th{:scope => "col"} Название
      %th{:scope => "col"} Текст
      %th{:scope => "col"} Автор
      %th{:scope => "col"}
      %th{:scope => "col"}
      %th{:scope => "col"}
  %tbody
    - @books.each do |book|
      %tr
        %td= book.name
        %td= book.text.slice(0..30)
        %td= book.author
        %td= link_to 'Просмотр', book, class: "btn btn-light"
        %td= link_to 'Редактировать', edit_book_path(book), class: "btn btn-light"
        %td= link_to 'Удалить', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light"
%br

= link_to 'Добавить книгу', new_book_path, class: "btn btn-light"

