= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :ethnoidiogloss
    = f.text_field :ethnoidiogloss
  .actions
    = f.submit 'Save'
