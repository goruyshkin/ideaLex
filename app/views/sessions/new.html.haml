%p{:id => "alert"}= alert
%h1 Login
= form_tag sessions_path do |form|
  %div{:class => "field"}
    = label_tag :Email
    = text_field_tag :email, class: "form-control", type: "string", placeholder: "Email"
  %div{:class => "field"}
    = label_tag :Пароль
    = password_field_tag :password, class: "form-control", type: "string", placeholder: "Пароль"
  %div{:class => "actions"}
    = submit_tag "Login"